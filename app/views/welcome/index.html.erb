        <%= render "shared/header" %>

        <div class="main-container">
            <div class="main wrapper clearfix">

                <%= render "shared/content", images: @image %>

                <div class="section scrollto" id="contact">
                    <a name="contact-section"></a> 
                    <h3>Contact Us</h3>
                    <% if @form_setting.setting == true %>
                    <%= form_for :lead, url: {action: "submit_lead"}, html: {id:"contact-form"} do |f| %>
                    <p>
                        <label for="name">Name:</label>
                        <%= f.text_field :name %>
                    </p>                    
                    <p>
                        <label for="phone">Phone:</label>
                        <%= f.text_field :phone %>
                    </p>
                    <p>
                        <label for="email">Email:</label>
                        <%= f.text_field :email %>
                    </p>
                    <p>
                        <label for="query">Query:</label>
                        <%= f.text_area :query %>
                    </p>
                    <p>
                        <button name="submit">SUBMIT ></button>
                    </p>
                    <% end %>
                    <% else %>
                    <p><strong>Oh No! We are currently full - servicing our existing clients</strong></p>
                    <p>If you would like to be added to our waiting list, please contact <a href="mailto:andysgardenm@gmail.com">andysgardenm@gmail.com</a></p>
                    <% end %>
                </div>

            </div> <!-- #main -->
        </div> <!-- #main-container -->

        <%= render "shared/footer" %>


        <%= render "shared/ga" %>
